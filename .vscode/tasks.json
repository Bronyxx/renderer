{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build opengl program",
      "type": "shell",
      "command": "g++",
      "args": [
        "main.cpp",
        "-o",
        "main",
        "-lglfw",
        "-ldl",
        "-lGL",
        "-lX11",
        "-lpthread",
        "-lXrandr",
        "-lXi",
        "-std=c++17"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
